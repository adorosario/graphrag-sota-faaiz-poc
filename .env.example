# =====================
# .env.example
# =====================

# GraphRAG Environment Configuration
# All sensitive data and configuration in one place

# ===========================================
# Neo4j Database Configuration
# ===========================================
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password
# Note: NEO4J_URI is set in docker-compose to use container name

# ===========================================
# OpenAI API (Optional - for future enhancements)
# ===========================================
OPENAI_API_KEY=your_api_key

# ===========================================
# Demo Application Authentication
# ===========================================
DEMO_USERNAME_1=admin
DEMO_PASSWORD_1=your_password
DEMO_USERNAME_2=demo
DEMO_PASSWORD_2=your_password

# ===========================================
# Application Configuration
# ===========================================
STREAMLIT_PORT=8501
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===========================================
# Processing Configuration
# ===========================================
CHUNK_SIZE=512
CHUNK_OVERLAP=50
MAX_ENTITIES_PER_CHUNK=10
BATCH_SIZE=32
MAX_WORKERS=4

# ===========================================
# Performance Settings
# ===========================================
MAX_TRAVERSAL_DEPTH=3
CYPHER_TIMEOUT=30
DEFAULT_K=10
VECTOR_K_MULTIPLIER=2.0

# ===========================================
# Router Thresholds
# ===========================================
VECTOR_MAX_COMPLEXITY=0.3
GRAPH_MIN_ENTITIES=2
GRAPH_MIN_COMPLEXITY=0.4
HYBRID_MIN_COMPLEXITY=0.6

# ===========================================
# Python Settings
# ===========================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1